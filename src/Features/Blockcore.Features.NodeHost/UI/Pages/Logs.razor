@page "/logs"

@inject IFullNode FullNode

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2"><strong>Node Logs</strong></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button class="btn btn-sm btn-secondary mr-3" @onclick="ReloadPage"><span class="oi oi-reload" aria-hidden="true"></span></button>
    </div>
</div>

@{
<pre class="small">
@(((Blockcore.FullNode)this.FullNode).LastLogOutput.TrimStart(' '))
</pre>
}
@code {
    private async Task ReloadPage()
    {
        await Task.CompletedTask;
    }
}